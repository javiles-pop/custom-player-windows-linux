{
  "name": "@fwi/shim-browser",
  "version": "2.0.0",
  "main": "electron-main.js",
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "Poppulo",
    "email": "support@poppulo.com"
  },
  "homepage": "https://www.poppulo.com",
  "description": "Poppulo Partner Player for Windows and Linux",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@types/jest": "^25.2.2",
    "@types/node": "^22.10.1",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.4.1",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^3.5.3",
    "dotenv": "^8.2.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "react-hot-loader": "^4.12.21",
    "sass": "1.63.6",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^8",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^4",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.7.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.7.1",
    "adm-zip": "^0.5.16",
    "classnames": "^2.3.1",
    "date-fns": "^2.27.0",
    "express": "^4.22.1",
    "html2canvas": "^1.0.0-rc.7",
    "js-logger": "^1.6.1",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "prettier": "^2.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.2.1",
    "redux": "^4.1.2",
    "redux-saga": "^1.1.3"
  },
  "scripts": {
    "start": "cross-env NODE_OPTIONS='--openssl-legacy-provider' webpack --watch -d",
    "dev": "cross-env NODE_OPTIONS='--openssl-legacy-provider' webpack-dev-server -d",
    "build": "cross-env NODE_OPTIONS='--openssl-legacy-provider' webpack --progress --mode production",
    "start:simplified": "cross-env NODE_OPTIONS='--openssl-legacy-provider' webpack --watch -d --config webpack.config.simplified.js",
    "dev:simplified": "cross-env NODE_OPTIONS='--openssl-legacy-provider' webpack-dev-server -d --config webpack.config.simplified.js",
    "build:simplified": "cross-env NODE_OPTIONS='--openssl-legacy-provider' webpack --progress --mode production --config webpack.config.simplified.js && webpack --config webpack.server.js",
    "server": "node server.js",
    "electron": "electron .",
    "electron:build": "yarn build:simplified && electron-builder",
    "electron:build:win": "yarn build:simplified && electron-builder --win",
    "electron:build:linux": "yarn build:simplified && electron-builder --linux"
  },
  "browserslist": [
    "last 2 chrome versions"
  ],
  "build": {
    "appId": "com.poppulo.partner-player",
    "productName": "Poppulo Partner Player Demo",
    "files": [
      "dist/**/*",
      "electron-main.js"
    ],
    "extraResources": [
      {
        "from": "dist/server.bundle.js",
        "to": "server.bundle.js"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "tar.gz",
      "category": "Utility"
    }
  }
}
