{
  "name": "@fwi/shim",
  "version": "2.0.0",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": {
    "nohoist": [
      "**/@webpack-cli/**",
      "**/@webpack-cli/serve/**",
      "**/@types/**"
    ],
    "packages": [
      "core",
      "device_browser",
      "device_brightsign",
      "device_brightsign/node-server",
      "device_SSSP",
      "device_webOS"
    ]
  },
  "resolutions": {
    "@types/react": "^17.0.37"
  },
  "scripts": {
    "lint": "yarn eslint && yarn format",
    "eslint": "eslint -c ./core/.eslintrc --fix 'core/src/**/*.{ts,tsx}'",
    "format": "prettier --config .prettierrc --write  '**/src/**/*.{ts,tsx}'",
    "build:browser": "./jenkins-build-browser.sh",
    "build:brightsign": "./jenkins-build-bs.sh",
    "build:brightsignprod": "./jenkins-build-bs-prod.sh",
    "clean": "rm -rf **/node_modules",
    "build:sssp": "./jenkins-build-sssp.sh"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "prettier": "^2.0.5"
  },
  "browserslist": [
    "chrome >= 47"
  ],
  "volta": {
    "node": "20.16.0",
    "yarn": "1.22.22"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
